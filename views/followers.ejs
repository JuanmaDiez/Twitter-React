<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/style.css" />
    <title>Document</title>
  </head>
  <body>
    <div class="d-flex container">
      <div class="row">
      <%- include("./partials/menu") %>
      <div class="container">
        <div>
          <h3><%= profileUser.firstname %> <%= profileUser.lastname %></h3>
          <p>@<%= profileUser.username %></p>
        </div>
        <div>
          <a href="/profile/<%= profileUser.username %>/followers">Followers</a>
          <a href="/profile/<%= profileUser.username %>/following"
            >Followings</a
          >
        </div>
        <% for (follower of profileUser.followers) { %>
        <div class="tweet-container p-4 d-flex justify-content-between">
          <div class="d-flex">
            <img src="/img/profile.svg" alt="pic" />
            <div class="tweet-inner-container">
              <div class="d-flex justify-content-start">
                <h6><%= follower.firstname %> <%= follower.lastname %></h6>
                <p class="ml-5">@<%= follower.username %></p>
              </div>
            </div>
          </div>
          <% if (!user.following.includes(follower._id)) {%>
          <form action="/<%= follower.id %>/follow?_method=PATCH" method="post">
            <button type="submit" class="btn follow-button w-5">Follow</button>
          </form>
          <% } %> <% if (user.following.includes(follower._id)) {%>
          <form
            action="/<%= follower.id %>/unfollow?_method=PATCH"
            method="post"
          >
            <button type="submit" class="btn follow-button w-5">
              Unfollow
            </button>
          </form>
          <% } %>
        </div>

        <% } %>
      </div>
      <%- include("./partials/info") %>
    </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
